    },
    {
      "description": "Map backslash switch to Delete - Customize",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "optional": [
                "shift",
                "control",
                "option",
                "command"
              ]
            }
          },
          "to": [
            { "key_code": "delete_or_backspace" }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "optional": [
                "fn"
              ]
            }
          },
          "to": [
          ]
        },
        {
